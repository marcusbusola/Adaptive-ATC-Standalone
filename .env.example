# ===========================================
# ATC Adaptive Alert Research System
# Environment Configuration
# ===========================================

# ----- LOCAL DEVELOPMENT -----
# Copy this file to .env and customize for local development

# Backend API Configuration
BACKEND_HOST=localhost
BACKEND_PORT=8000
BACKEND_RELOAD=true
BACKEND_LOG_LEVEL=info

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENV=development

# Database Configuration (SQLite for local dev)
DATABASE_URL=sqlite:///./backend/data/atc_research.db
DATABASE_ECHO=false

# ML Model Configuration
ML_MODEL_PATH=./backend/ml_models/
ML_TRAINING_ENABLED=true

# Alert System Configuration
# Alert Conditions: 1=Traditional Modal, 2=Rule-Based Adaptive, 3=ML-Based
DEFAULT_ALERT_CONDITION=1
ENABLE_BEHAVIORAL_TRACKING=true

# Scenario Configuration
AVAILABLE_SCENARIOS=L1,L2,L3,H4,H5,H6

# Session Configuration
SESSION_TIMEOUT=3600

# Research Settings
PARTICIPANT_ID_PREFIX=PART
RANDOMIZE_CONDITIONS=true

# Security (CHANGE IN PRODUCTION)
SECRET_KEY=dev-secret-key-change-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
RESEARCHER_TOKEN=dev-token-change-in-production

# Logging
LOG_FILE_PATH=./backend/data/logs/
LOG_RETENTION_DAYS=30
ENABLE_DETAILED_LOGGING=true


# ===========================================
# ----- RENDER PRODUCTION DEPLOYMENT -----
# These are set via Render Dashboard or render.yaml
# DO NOT commit production values to git!
# ===========================================
#
# DATABASE_URL           - Provided by Render PostgreSQL addon
# SECRET_KEY             - Auto-generated by render.yaml
# RESEARCHER_TOKEN       - Auto-generated by render.yaml
# CORS_ORIGINS           - Set to your frontend URL
# FRONTEND_URL           - Your Render app URL (e.g., https://atc-adaptive-alerts.onrender.com)
# BACKEND_URL            - Same as FRONTEND_URL for combined deployment
# ALLOW_UNPROTECTED_RESEARCHER=false
# ML_TRAINING_ENABLED=false
# ENABLE_BEHAVIORAL_TRACKING=true

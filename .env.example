# Backend API Configuration
BACKEND_HOST=localhost
BACKEND_PORT=8000
BACKEND_RELOAD=true
BACKEND_LOG_LEVEL=info

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENV=development

# Database Configuration
DATABASE_URL=sqlite:///./backend/data/atc_research.db
DATABASE_ECHO=false

# ML Model Configuration
ML_MODEL_PATH=./backend/ml_models/
ML_TRAINING_ENABLED=true
ML_RETRAIN_INTERVAL=3600  # seconds

# Alert System Configuration
# Alert Conditions: 1=Traditional Modal, 2=Rule-Based Adaptive, 3=ML-Based
DEFAULT_ALERT_CONDITION=1
ENABLE_BEHAVIORAL_TRACKING=true

# BlueSky Configuration (default event_port is 11000)
BLUESKY_WS_URL=ws://localhost:11000

# Scenario Configuration
# Scenarios: L1 (Low complexity, Low traffic), L2 (Low complexity, High traffic)
#            H4 (High complexity, Low traffic), H5 (High complexity, High traffic)
AVAILABLE_SCENARIOS=L1,L2,H4,H5

# Session Configuration
SESSION_TIMEOUT=3600  # seconds
MAX_SESSIONS_PER_USER=5

# Data Collection
DATA_EXPORT_FORMAT=json  # json, csv, or both
DATA_RETENTION_DAYS=365
ENABLE_ANONYMIZATION=true

# Research Settings
PARTICIPANT_ID_PREFIX=PART
ENABLE_A_B_TESTING=true
RANDOMIZE_CONDITIONS=true

# Security (for production deployment)
SECRET_KEY=your-secret-key-here-change-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_HOSTS=localhost,127.0.0.1

# Logging
LOG_FILE_PATH=./backend/data/logs/
LOG_RETENTION_DAYS=30
ENABLE_DETAILED_LOGGING=true
